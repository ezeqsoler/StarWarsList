<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    tools:context=".FilmsAdapter">

    <ImageView
        android:id="@+id/ivFilms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:src="@drawable/logo"
        app:srcCompat="@drawable/films" />

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textColor="#FFE81F"
        android:textSize="18sp"
        tools:text="Title:" />

    <TextView
        android:id="@+id/tvEpisodeId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textColor="#FFE81F"
        android:textSize="18sp"
        tools:text="Episode:" />

    <TextView
        android:id="@+id/tvDirector"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textColor="#FFE81F"
        android:textSize="18sp"
        tools:text="Director:" />

    <TextView
        android:id="@+id/tvProducer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textColor="#FFE81F"
        android:textSize="18sp"
        tools:text="Producer:" />

    <TextView
        android:id="@+id/tvReleaseDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textColor="#FFE81F"
        android:textSize="18sp"
        tools:text="Release Date:" />

    <TextView
        android:id="@+id/tvOpeningCrawl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textColor="#FFE81F"
        android:textSize="18sp"
        tools:text="Opening Crawl" />

</LinearLayout>
