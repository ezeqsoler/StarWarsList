<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    tools:context=".PeopleAdapter">

    <ImageView
        android:id="@+id/ivPeople"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:src="@drawable/logo"
        app:srcCompat="@drawable/people" />

    <TextView
        android:id="@+id/tvPersonName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textColor="#FFE81F"
        android:textSize="18sp"
        tools:text="Name;" />

    <TextView
        android:id="@+id/tvBirthYear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textColor="#FFE81F"
        android:textSize="18sp"
        tools:text="Birth Year" />

    <TextView
        android:id="@+id/tvGender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textColor="#FFE81F"
        android:textSize="18sp"
        tools:text="Gender:" />

    <TextView
        android:id="@+id/tvEyeColor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textColor="#FFE81F"
        android:textSize="18sp"
        tools:text="Eye Color:" />

    <TextView
        android:id="@+id/tvHairColor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textColor="#FFE81F"
        android:textSize="18sp"
        tools:text="Hair Color:" />

    <TextView
        android:id="@+id/tvSkinColor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textColor="#FFE81F"
        android:textSize="18sp"
        tools:text="Skin Color:" />

    <TextView
        android:id="@+id/tvHeight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textColor="#FFE81F"
        android:textSize="18sp"
        tools:text="Height:" />

    <TextView
        android:id="@+id/tvMass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textColor="#FFE81F"
        android:textSize="18sp"
        tools:text="Mass:" />

</LinearLayout>