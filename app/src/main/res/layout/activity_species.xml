<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    tools:context=".SpeciesAdapter">

    <ImageView
        android:id="@+id/ivSpecies"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:src="@drawable/logo"
        app:srcCompat="@drawable/species" />

    <TextView
        android:id="@+id/tvSpecieNames"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textColor="#FFE81F"
        android:textSize="18sp"
        tools:text="Name:" />

    <TextView
        android:id="@+id/tvClassification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textColor="#FFE81F"
        android:textSize="18sp"
        tools:text="Classification" />

    <TextView
        android:id="@+id/tvDesignation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textColor="#FFE81F"
        android:textSize="18sp"
        tools:text="Designation:" />

    <TextView
        android:id="@+id/tvAverageHeight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textColor="#FFE81F"
        android:textSize="18sp"
        tools:text="Average Height:" />

    <TextView
        android:id="@+id/tvAverageLifespan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textColor="#FFE81F"
        android:textSize="18sp"
        tools:text="Average Lifespan:" />

    <TextView
        android:id="@+id/tvEyeColors"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textColor="#FFE81F"
        android:textSize="18sp"
        tools:text="Eye Colors:" />

    <TextView
        android:id="@+id/tvHairColors"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textColor="#FFE81F"
        android:textSize="18sp"
        tools:text="Hair Colors:" />

    <TextView
        android:id="@+id/tvSkinColors"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textColor="#FFE81F"
        android:textSize="18sp"
        tools:text="Skin Colors" />

    <TextView
        android:id="@+id/tvLanguage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textColor="#FFE81F"
        android:textSize="18sp"
        tools:text="Language:" />

</LinearLayout>